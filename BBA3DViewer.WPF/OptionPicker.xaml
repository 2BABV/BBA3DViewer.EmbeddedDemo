<Window x:Class="BBA3DViewer.WPF.OptionPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBA3DViewer.WPF"
        mc:Ignorable="d"
        Title="OptionPicker" Height="100" Width="400">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Button Name="btn_traditional" Grid.Column="0" Click="btn_traditional_Click">Traditional implementation</Button>
		<Button Name="btn_postmessage" Grid.Column="1" Click="btn_postmessage_Click">Postmessage implementation</Button>
    </Grid>
</Window>
